@model TASKMANAGER21.Models.Tasks1

@{
    ViewData["Title"] = "Create";
    var resinfs = (IEnumerable<TASKMANAGER21.Models.Resinf>)ViewData["resInf"];
    var projects = (IEnumerable<TASKMANAGER21.Models.Projectd>)ViewData["projects"];

}

<div class="page-body">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header py-0 pt-2">
                    <div class="row">
                        <div class="col-md-4">
                            <h4 class=" ">Create New Task</h4>
                        </div>
                        <div class="col-md-4">

                        </div>
                        <div class="col-md-4">

                        </div>
                    </div>

                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="Create" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Tskid" />

                                <div class="form-group">
                                    <label asp-for="Tskowner" class="control-label"></label>

                                    <select asp-for="Tskowner" class="form-control">
                                        <option selected disabled>Select</option>

                                        @foreach (var item in resinfs)
                                        {
                                        <option value="@item.Rescode">@item.Resname</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Tskowner" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Tskassigned" class="control-label"></label>
                                    <select asp-for="Tskassigned" class="form-control">
                                        <option selected disabled>Select</option>
                                        @foreach (var item in resinfs)
                                        {
                                        <option value="@item.Rescode">@item.Resname</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Tskassigned" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Tskproject" class="control-label"></label>
                                    <select asp-for="Tskproject" class="form-control">
                                        <option selected disabled>Select</option>
                                        @foreach (var item in projects)
                                        {
                                        <option value="@item.Prid">@item.Prdesc</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Tskproject" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Tskname" class="control-label"></label>
                                    <input asp-for="Tskname" class="form-control" />
                                    <span asp-validation-for="Tskname" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Tskdesc" class="control-label"></label>
                                    <input asp-for="Tskdesc" class="form-control" />
                                    <span asp-validation-for="Tskdesc" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Tskstart" class="control-label"></label>
                                    <input asp-for="Tskstart" class="form-control" />
                                    <span asp-validation-for="Tskstart" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Tskendtime" class="control-label"></label>
                                    <input asp-for="Tskendtime" id="TaskDueDate1" class="form-control form-control-sm hasDatepicker" />
                                    <span asp-validation-for="Tskendtime" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Tskstatus" class="control-label"></label>
                                    <select asp-for="Tskstatus" class="form-control">
                                        <option value="pending">Pending</option>
                                        <option value="ongoing">Ongoing</option>
                                        <option value="completed">Completed</option>
                                    </select>
                                    <span asp-validation-for="Tskstatus" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Tskpriority" class="control-label"></label>
                                    <select asp-for="Tskpriority" class="form-control">
                                        <option value="highest">Highest Priority</option>
                                        <option value="high">High Priority</option>
                                        <option value="normal">Normal Priority</option>
                                        <option value="low">Low Priority</option>
                                    </select>
                                    <span asp-validation-for="Tskpriority" class="text-danger"></span>
                                </div>


                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>

                    
                </div>
                <div class="card-footer">
                    <div>
                        <a asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(".tasks1").addClass("pcoded-trigger")

        $("#TaskDueDate1").datepicker({
            dateFormat: "d-M-yy",
            changeMonth: true,
            changeYear: true,
            yearRange: "-20:+0"
        });
    </script>
}
